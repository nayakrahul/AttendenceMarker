<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".DisplayContact" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/courses"
    android:gravity="center_vertical">


    <Button
            android:layout_width="364dp"
            android:layout_height="@dimen/add_course_height"

        android:text="+ Add Course"
            android:id="@+id/add_course"
            android:gravity="center"
            android:textAlignment="center"
            android:background="#9BDDFF"
            android:nestedScrollingEnabled="false"
            android:onClick="onClickB"
            android:layout_below="@+id/course_list"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        android:fontFamily="Roboto-Thin"
        android:textSize="@dimen/add_course_text_size"
        android:textColor="#767676" />



</LinearLayout>
    </ScrollView>