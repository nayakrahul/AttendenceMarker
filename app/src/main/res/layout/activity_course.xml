<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/courses"
    android:gravity="center_vertical">


    <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/add_course_height"
            android:text="Add Course"
            android:id="@+id/attendance_button"
        android:gravity="center"
            android:textAlignment="center"
            android:background="#9BDDFF"
            android:nestedScrollingEnabled="false"
            android:onClick="onClick"
            android:layout_below="@+id/course_list"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
        android:fontFamily="Roboto-Thin"
        android:textSize="@dimen/add_course_text_size"
        android:textColor="#545454" />



</LinearLayout>